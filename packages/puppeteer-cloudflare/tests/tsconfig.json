{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "paths": {
      "@workerTests/*": ["./workerTests/*"],
      "@cloudflareTests/*": ["./workerTests/packages/puppeteer-cloudflare/tests/src/*"],
    },
    "types": ["./worker-configuration.d.ts"]
  },
  "include": ["./**/*.ts", "./**/*.d.ts"],
}
