{
  "name": "test-workers",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "npx wrangler dev",
    "start": "wrangler dev",
    "test": "wireit",
    "build": "wireit",
    "cf-typegen": "wrangler types"
  },
  "wireit": {
    "build": {
      "command": "tsc -b",
      "clean": "if-file-deleted",
      "dependencies": [
        "../packages/puppeteer:build"
      ],
      "files": [
        "../tools/mochaRunner/**",
        "src/**"
      ],
      "output": [
        "build/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "test": {
      "command": "vitest"
    }
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.4.16",
    "@cloudflare/workers-types": "^4.20240725.0",
    "typescript": "^5.4.5",
    "vitest": "1.5.0",
    "wrangler": "^3.60.3"
  },
  "dependencies": {
    "puppeteer": "file:../packages/puppeteer",
    "undici": "^6.19.4"
  }
}
