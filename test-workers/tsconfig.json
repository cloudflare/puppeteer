{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "types": [
      "@cloudflare/workers-types/experimental",
      "./worker-configuration.d.ts"
    ]
  },
  "include": ["./**/*.ts", "./**/*.d.ts"]
}
